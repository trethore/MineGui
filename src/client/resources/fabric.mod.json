{
  "schemaVersion": 1,
  "id": "minegui",
  "version": "${version}",
  "name": "MineGui",
  "description": "MineGui is a lightweight wrapper around `imgui-java`, designed to simplify the creation of modern GUIs in Minecraft mods built with Fabric.",
  "authors": [
    "Tytoo"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },
  "license": "CC0-1.0",
  "icon": "assets/minegui/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "tytoo.minegui.MineGuiClient"
    ]
  },
  "mixins": [
    {
      "config": "minegui.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=0.16.14",
    "minecraft": "~1.21.4",
    "java": ">=21",
    "fabric-api": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}